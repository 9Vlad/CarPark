@model IEnumerable<CarPark.Models.DDriver>

@{
    ViewData["Title"] = "Index";
}

<h1>Водії</h1>

<p>
    <a asp-action="Create">Додати водія</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ім'я
            </th>
            <th>
                Прізвище
            </th>
            <th>
                Номер телефону
            </th>
            <th>
                Досвід
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DriverId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.DriverId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.DriverId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
