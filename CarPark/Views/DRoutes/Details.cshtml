@model CarPark.Models.DRoute

@{
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <h4>Маршрут</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Довжина
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RouteLen)
        </dd>
        <dt class = "col-sm-2">
            Час в дорозі
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RouteTime)
        </dd>
        <dt class = "col-sm-2">
            Працюючий
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsWork)
        </dd>
        <dt class = "col-sm-2">
            Замітка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class = "col-sm-2">
            Місто відправки
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BcityNavigation.CityName)
        </dd>
        <dt class = "col-sm-2">
            Місто прибуття
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EcityNavigation.CityName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.RouteId">Редагувати</a> |
    <a asp-action="Index">Назад до списку</a>
</div>
