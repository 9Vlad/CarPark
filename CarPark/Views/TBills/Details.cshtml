@model CarPark.Models.TBill

@{
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <h4>Білет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillId)
        </dd>
        @if (User.IsInRole(WebConstants.SupervisorRole))
        {
            <dt class="col-sm-2">
                Клієнт
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.Email)
            </dd>
        }
        <dt class="col-sm-2">
            Маршрут
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flights.FlightsId)
        </dd>
    </dl>
</div>
<div>

    @if (User.IsInRole(WebConstants.ClientRole))
    {
        <form asp-action="Order">
            <input type="hidden" name="id" value="@Model.FlightsId" />
            <input type="submit" value="Замовити" class="btn btn-success" />
        </form>
    }
    <a asp-action="Index">Назад до списку</a>
</div>
