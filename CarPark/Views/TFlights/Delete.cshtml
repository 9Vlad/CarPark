@model CarPark.Models.TFlight

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити запис?</h3>
<div>
    <h4>Рейс</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата відправки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BdateRoute)
        </dd>
        <dt class="col-sm-2">
            Дата прибуття
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EdateRoute)
        </dd>
        <dt class="col-sm-2">
            Закінчений
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsEnd)
        </dd>
        <dt class="col-sm-2">
            Скасований
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCanselet)
        </dd>
        <dt class="col-sm-2">
            Автобус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bus.Numer)
        </dd>
        <dt class="col-sm-2">
            Водій
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.Surname)
        </dd>
        <dt class="col-sm-2">
            Маршрут
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Route.RouteId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FlightsId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
