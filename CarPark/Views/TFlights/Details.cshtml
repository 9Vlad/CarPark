@model CarPark.Models.TFlight

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Рейс</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Місто відправки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Route.BcityNavigation.CityName)
        </dd>
        <dt class="col-sm-2">
            Місто прибуття
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Route.EcityNavigation.CityName)
        </dd>
        <dt class = "col-sm-2">
            Дата відправки
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BdateRoute)
        </dd>
        <dt class = "col-sm-2">
            Дата прибуття
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EdateRoute)
        </dd>
        <dt class = "col-sm-2">
            Закінчений
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsEnd)
        </dd>
        <dt class = "col-sm-2">
            Скасований
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCanselet)
        </dd>
        <dt class = "col-sm-2">
            Автобус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bus.Numer)
        </dd>
        <dt class = "col-sm-2">
            Водій
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Driver.Surname)
        </dd>
        <dt class = "col-sm-2">
            Маршрут
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Route.RouteId)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole(WebConstants.SupervisorRole))
    {
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.FlightsId">Редагувати</a> |
        </div>
    }
    <a asp-action="Index">Назад до списку</a>
</div>
