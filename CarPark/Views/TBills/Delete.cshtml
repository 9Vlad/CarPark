@model CarPark.Models.TBill

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити запис?</h3>
<div>
    <h4>Білет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BillId)
        </dd>
        <dt class = "col-sm-2">
            Клієнт
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.Email)
        </dd>
        <dt class = "col-sm-2">
            Рейс
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flights.FlightsId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FlightsId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
