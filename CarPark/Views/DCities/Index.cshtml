@model IEnumerable<CarPark.Models.DCity>

@{
    ViewData["Title"] = "Index";
}

<h1>Міста</h1>

<p>
    <a asp-action="Create">Додати місто</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Назва
            </th>
            <th>
                Замітка
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CityId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.CityId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.CityId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
